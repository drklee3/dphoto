{
    "compilerOptions": {
        "baseUrl": "./src",
        "lib": ["ESNext", "DOM"],
        "paths": {
            "~*": ["./*"]
        },
        "module": "es2015",
        "noEmit": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
